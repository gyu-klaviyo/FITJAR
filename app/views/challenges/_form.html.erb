      <%= form_for(@challenge, :html => { :multipart => true }) do |f| %>
        <% if @challenge.errors.any? %>
          <div id="error_explanation"class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h4>
            <ul>
              <% @challenge.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

             <div id="stripe_error" class="alert alert-danger" style="display:none">
              <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
            </div>
    <br><br>

    <form class="form-horizontal" role="form">
      
        <div class="container">
                                              <!-- NAME OF CHALLENGE --> 
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-5 control-label" style="text-align: right">Name Your Challenge:</label>
            <div class="col-sm-4">
              <%= f.text_field :name, :placeholder => "Hell Week!", autofocus: true, class: "form-control" %>
            </div>
          </div><br><br>

          <div class="form-group">
            <label for="inputPassword3" class="col-sm-5 control-label" style="text-align: right">When Shall We Begin?</label>
              <div class="col-sm-3">
                <%= f.text_field :start, :placeholder => " mm/dd/yyyy", class: "form-control input-group date datetimepicker5" %>
                                  <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span><script type="text/javascript">
                          $(function () {
                              $('#datetimepicker5').datetimepicker({
                                  pickTime: false
                              });
                          });
                      </script>
              </div>
          </div><br><br><br><br>
                                              <!-- DURATION = DATE + 7, 21, OR 30 DAYS --> 
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-5 control-label" style="text-align: right">Duration</label>
            <div class="col-sm-4">
                  <div class="btn-group">   
                    <%= f.select(:duration, options_for_select([['7  Days',7], ['21  Days',21], ['30  Days',30]]), {}, {class: "form-control"}) %>
                  </div>
            </div>
          </div><br><br>
                                            <!-- WEARABLE DEVICE--> 
         <div class="form-group">
            <label for="inputPassword3" class="col-sm-5 control-label" style="text-align: right">Fitness Tracker</label>
            <div class="col-sm-4">
                  <div class="btn-group">   
                    <%= f.select(:duration, options_for_select([['FitBit',7], ['FuelBand',21], ['Moves',30]]), {}, {class: "form-control"}) %>
                  </div>
            </div>
          </div><br><br>
                                                   <!-- INVITE OTHERS --> 
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-5 control-label" style="text-align: right">Who Else Is Game?:</label>
            
            <div class="col-sm-3">
              <%= f.text_field :name, class: "form-control" %><span class="input-group-btn">
                  <button class="btn btn-default" type="button" for="inputSuccess3">Invite</button>
                </span>
            </div>
          
          </div><br><br>

          <div class="form-group">
            <label for="inputPassword3" class="col-sm-5 control-label" style="text-align: right">Stake</label>
            <div class="col-sm-4">
                  <div class="btn-group">   
                    <%= f.select(:duration, options_for_select([['$0',0], ['$10',10], ['$20',20], ['$50',50], ['$100',100],['Other',0]]), {}, {class: "form-control"}) %>
                  </div>
            </div>
          </div><br><br>
                                                      <!-- BUTTON -->     
          <div class="form-group">
              <label for="inputEmail3" class="col-sm-5 control-label" style="text-align: right"></label>
              <div class="col-sm-4">
                <div class="form-group">
                  <%= f.submit class: "btn btn-success btn-block" %>
                </div>
              </div>
          </div><br><br>
        



        </div>  <!--<<<DIV FOR THE CONTAINER -->   

     
    </form>




<%end%>


     

