<!-- NAME OF CHALLENGE --> 
<form class="form-horizontal" role="form">
  <br>
  <div class="form-group has-success has-focus">
    <label class="control-label col-md-5" for="inputSuccess3">Name Your Challenge:</label>
    <div class="col-md-3">
      <input type="text" class="form-control" placeholder="Hell Week!">
    </div>
  </div>
</form>


<!-- DATE --> 
