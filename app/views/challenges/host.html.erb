<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Action</th>
  </tr>

  <% @challenges.each do |challenge| %>
    <tr>
      <td><%= image_tag challenge.image.url(:thumb) %></td>
      <td><%= challenge.name %></td>
      <td><%= challenge.description %></td>
      <td><%= number_to_currency(challenge.stake) %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", challenge, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_challenge_path(challenge), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_challenge_path, class: "btn btn-link"  %>
<% end %>