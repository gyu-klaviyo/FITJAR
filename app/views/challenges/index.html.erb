<h1>ARENA</h1>
<h2>Let The Games Begin!</h2>

<div class="center">
  <div class="row">
    <% @challenges.each do |challenge| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(challenge.image.url), challenge%>
          <%= image_tag challenge.image.url %>
          <div class="caption">
            <h3><%= challenge.name %></h3>
            <h3><%= "Hosted by #{challenge.user.name}" %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<div class="center">
  <%= will_paginate @posts,renderer: BootstrapPagination::Rails %>
</div>
