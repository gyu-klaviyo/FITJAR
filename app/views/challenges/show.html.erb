
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @challenge.image.url %>
  </div>
</div>

  <div class="col-md-6">
    <h3><%= @challenge.name %></h3>
    <p><%= number_to_currency(@challenge.stake) %></p>
    <p><%= @challenge.description %></p>
  <br>



<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
    <span class="sr-only">60% Complete</span>
  </div>
</div>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
    <span class="sr-only">60% Complete</span>
  </div>
</div>

      <div class="center">

        <!--JQ - this turbo link must be disabled, else the token won't process-->
        <%= link_to "Confirm Now", new_challenge_payment_path(@challenge), class: "btn btn-primary", data: { no_turbolink: true } %>
      </div>
  </div>

<% if current_user == @challenge.user %>
  <%= link_to 'Edit', edit_challenge_path(@challenge), class: "btn btn-link" %> |
<% end %>


<%= link_to 'Back', challenge_path, class: "btn btn-link" %>
