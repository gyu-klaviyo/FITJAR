  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag @challenge.image.url %>
        </div>
      </div>
      
      <div class="col-md-8">
        <h2 class="center"><%= @challenge.name %> Challenge</h2><br>
          <p>Your host <%= @challenge.user.user_name %>, has set the stage for the challenge below.  Click here to read more about the<button class="btn btn-link" data-toggle="modal" data-target="#myModal">
                  rules
                </button>



                <!-- Modal for RULES -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="myModalLabel">Rules</h4>
                      </div>
                      <div class="modal-body">
                        <%= render 'pages/rulesPartial' %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>

              <ul>
                <li>DESCRIPTION: <%= @challenge.description %></li>
                <li>STAKE: <%= number_to_currency(@challenge.stake) %></li>
                <li>DURATION: <%= @challenge.duration %></li>
                <li>START DATE </li>
              </ul>
          </p>  
  
          <div class="container" style="max-width:400px; margin: 0 auto 10px;">
            <div class="center-block">
              <%= link_to "ACCEPT CHALLENGE", new_challenge_payment_path(@challenge), class: "btn btn-primary  btn-block", data: { no_turbolink: true } %>
             </div>

             <!-- Small modal -->
              <button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">DEVICE</button>

              <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                  <div class="modal-content">
                      <div class="form-group">
                          <form role="form">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="exampleInputFile">File input</label>
    <input type="file" id="exampleInputFile">
    <p class="help-block">Example block-level help text here.</p>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Check me out
    </label>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
                          
                      </div>
                  </div>
                </div>
              </div>
             <div class="center-block">
                 <%= form_tag charges_path do %>
                    <article>
                      <label class="amount">
                        <span>Amount: $5.00</span>
                      </label>
                    </article>

                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                            data-description="A month's subscription"
                            data-amount="3000"></script>
                  <% end %>
             </div>

             
          </div>
      </div>
  </div>



