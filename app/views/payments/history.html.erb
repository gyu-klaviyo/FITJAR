<div class="center">
  <h2>Your Challenge History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Customer</th>
    <th class="center">Date Sold</th>
  </tr>

  <% @payments.each do |payment| %>
    <tr>
      <td class="center"><%= image_tag payment.challenge.image.url(:thumb) %></td>
      <td class="center"><%= payment.challenge.name %></td>
      <td class="center"><%= number_to_currency(payment.challenge.stake) %></td>
      <td class="center"><%= payment.host.name %></td>
      <td class="center"><%= payment.created_at.strftime("%B %-d, %Y") %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", challenge, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_challenge_path(challenge), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Challenge', new_challenge_path, class: "btn btn-link" %>
<% end %>